<div class="d-flex justify-content-center">
  <div class="card mb-3 col-10">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="{{#if currentUser.image}}{{currentUser.image}}{{else}}https://upload.wikimedia.org/wikipedia/commons/thumb/4/46/Question_mark_%28black%29.svg/375px-Question_mark_%28black%29.svg.png{{/if}}"
          class="rounded-circle mt-3 ms-3 mb-3" height="320px" width="320px">
      </div>
      <div class="col-md-8">
        <div class="card-body">

          <h5 class="card-title">{{currentUser.name}}</h5>
          <p class="card-text">{{currentUser.email}}</p>
          <p class="card-text mb-0"><strong>{{currentUser.commentedRestaurants.length}}</strong> 已評論的餐廳</p>
          <p class="card-text mb-0"><strong>{{currentUser.FavoritedRestaurants.length}}</strong> 收藏的餐廳</p>
          <p class="card-text mb-0"><strong>{{currentUser.Followings.length}}</strong> followings(追蹤者)</p>
          <p class="card-text "><strong>{{currentUser.Followers.length}}</strong> followers(追隨者)</p>
          {{#ifCond user.id user.id}}
          <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
          {{/ifCond}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="mb-3 col-10 d-flex flex-row justify-content-between">
    <div class="follow-container col-4 pe-3">
      <div class="card following mb-3">
        <div class="card-header">
          <strong>{{currentUser.Followings.length}}</strong> followings(追蹤者)
        </div>
        <div class="card-body d-flex flex-wrap ">
          {{#each currentUser.Followings}}
            <div class="ms-2 mb-2">
              <a href="/restaurants/{{this.id}}" style="text-decoration:none;">
                <img src="{{this.image}}" width="90px" height="90px">
              </a>
            </div>
          {{/each}}
        </div>
      </div>
      <div class="card follower">
        <div class="card-header">
          <strong>{{currentUser.Followers.length}}</strong> followers(追隨者)
        </div>
        <div class="card-body d-flex flex-wrap ">
          {{#each currentUser.Followers}}
            <div class="ms-2 mb-2">
              <a href="/restaurants/{{this.id}}" style="text-decoration:none;">
                <img src="{{this.image}}" width="90px" height="90px">
              </a>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="restaurant-container col-8">
      <div class="card restaurants mb-3">
        <div class="card-header">
          <strong>{{currentUser.commentedRestaurants.length}}</strong> 已評論的餐廳
        </div>
        <div class="card-body d-flex flex-wrap">
          {{#each currentUser.commentedRestaurants}}
          <div class="ms-4 mb-4">
            <a href="/restaurants/{{this.id}}" style="text-decoration:none;">
              <img src="{{this.image}}" width="90px" height="90px">
            </a>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="card restaurants">
        <div class="card-header">
          <strong>{{currentUser.FavoritedRestaurants.length}}</strong> 收藏的餐廳
        </div>
        <div class="card-body d-flex flex-wrap">
          {{#each currentUser.FavoritedRestaurants}}
          <div class="ms-4 mb-4">
            <a href="/restaurants/{{this.id}}" style="text-decoration:none;">
              <img src="{{this.image}}" width="90px" height="90px">
            </a>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>